public class Solution {
    public boolean isValid(String s) {
        Stack st=new Stack();
        if(s.length()%2!=0||s.length()==1){
            return false;
        }
        for(int i=0;i<s.length();i++){
            if(s.charAt(i)=='('||s.charAt(i)=='['||s.charAt(i)=='{'){
                st.push(s.charAt(i));
            }else if(s.charAt(i)==')'){
                if(!st.contains('(')){
                    return false;
                }else{
                    st.pop();
                }
            }else if(s.charAt(i)==']'){
                if(!st.contains('[')){
                    return false;
                }else{
                    st.pop();
                }
            }else if(s.charAt(i)=='}'){
                if(!st.contains('{')){
                    return false;
                }else{
                    st.pop();
                }
            }
        }
        if(st.size()==0){
            return true;
        }
        return false;
    }
}
