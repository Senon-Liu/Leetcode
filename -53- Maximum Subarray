public class Solution {
    public int maxSubArray(int[] A) {
        int max = A[0];
     int currentSum = A[0];
     for(int i = 1; i < A.length; i++) {
         if(currentSum  < 0) {
             currentSum = A[i];
             max = max >= currentSum ? max : currentSum;
         }
         else {
             currentSum += A[i];
             max = max >= currentSum ? max : currentSum;
         }     }
     return max;
   }
}
